.item{
  display: flex;
  margin: 20rpx 10rpx;
  border:1px solid #eee;
  color: #555;
  background: #fafafa;
  padding:13rpx;
  height: 300rpx;
}
.pic{
  width: 220rpx;
  height: 290rpx;
  flex-shrink: 0;
}
.text{
  padding-left: 16rpx;
  line-height: 1.2rem;
  overflow: hidden;
}
image{
  width: 100%;
  height: 100%;
}
.title{
  font-weight: bold;
  font-size: 1.2rem;
  line-height: 2.5rem;
  /* margin-right: 10rpx; */
  /* display: block; */
  /* background-color: pink; */
}
.time{
  float: right;
  font-size: 0.85em;
  font-weight: normal;
  color: #999;
} 
.author{
  color:#999;
  font-size: 1rem;
}
.intro{
  font-size: 0.8rem;
}



@media screen and (max-width: 320px){
  .pic{
    height: auto;
  }
}

@media screen and (min-width: 768px){
  .item{
    width: 30%;
    float: left;
    box-sizing: border-box;
    margin: calc(10% / 6);

    padding:10rpx;
    flex-wrap: wrap;
    height: auto;
  }
  .pic{
    width: 100%;
  }
  .text{
    padding: 0; 
    height: 6.2rem;
  }
  .text .intro{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
  }
 
  
}